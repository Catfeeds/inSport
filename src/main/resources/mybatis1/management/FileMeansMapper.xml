<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FileMeansMapper">

    <!--表名 -->
    <sql id="tableName">
		TB_FILEMEANS
	</sql>

    <!-- 字段 -->
    <sql id="Field">
		FILENAME,	
		FILE_URL,	
		FILE_CREATETIME,	
		FILE_JURISDICTION,	
		FILE_TYPE,	
		FILE_CREATEUSER,	
		FILE_DOWNLOAD,	
		FILE_READ,
		FILE_CATALOGURL,
		FILE_REMARK,
		FILE_CATALOGURL_ID,
		FILE_READUSERS,
		FILE_PASSWORD,
		FILE_ISENCTYPT,
		FILE_ISPRIVATE,
		FILEMEANS_ID
	</sql>

    <!-- 字段值 -->
    <sql id="FieldValue">
		#{FILENAME},	
		#{FILE_URL},
		#{FILE_CREATETIME},
		#{FILE_JURISDICTION},
		#{FILE_TYPE},
		#{FILE_CREATEUSER},
		#{FILE_DOWNLOAD},
		#{FILE_READ},
		#{FILE_CATALOGURL},
		#{FILE_REMARK},
		#{FILE_CATALOGURL_ID},
		#{FILE_READUSERS},
		#{FILE_PASSWORD},
		#{FILE_ISENCTYPT},
		#{FILE_ISPRIVATE},
		#{FILEMEANS_ID}
	</sql>

    <!-- 新增-->
    <insert id="save" parameterType="pd">
        insert into
        <include refid="tableName"></include>
        (
        <include refid="Field"></include>
        ) values (
        <include refid="FieldValue"></include>
        )
    </insert>

    <!-- 删除-->
    <delete id="delete" parameterType="pd">
        delete from
        <include refid="tableName"></include>
        where
        FILEMEANS_ID = #{FILEMEANS_ID}
    </delete>

    <delete id="deleteByUrl" parameterType="pd">
        delete from
        <include refid="tableName"></include>
        where
        FILE_URL = #{FILE_URL}
    </delete>

    <!-- 修改 -->
    <update id="edit" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        FILENAME = #{FILENAME},
        FILE_URL = #{FILE_URL},
        FILE_CATALOGURL = #{FILE_CATALOGURL},
        FILE_CATALOGURL_ID = #{FILE_CATALOGURL_ID},
        FILE_CREATETIME = #{FILE_CREATETIME},
        FILE_JURISDICTION = #{FILE_JURISDICTION},
        FILE_TYPE = #{FILE_TYPE},
        FILE_CREATEUSER = #{FILE_CREATEUSER},
        FILE_DOWNLOAD = #{FILE_DOWNLOAD},
        FILE_READ = #{FILE_READ},
        FILE_REMARK = #{FILE_REMARK},
        FILEMEANS_ID = FILEMEANS_ID
        where
        FILEMEANS_ID = #{FILEMEANS_ID}
    </update>

    <update id="editName" parameterType="pd">
        update
        <include refid="tableName"></include>
        set
        FILENAME = #{FILENAME},
        FILE_URL = #{newUrl}
        where
        FILE_URL = #{FILE_URL}
    </update>

    <!-- 通过ID获取数据 -->
    <select id="findById" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where
        FILEMEANS_ID = #{FILEMEANS_ID}
    </select>

    <!-- 列表 -->
    <select id="datalistPage" parameterType="page" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        where 1=1
        <if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
            and
            (
            <!--	根据需求自己加检索条件
                字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
                 or
                字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            -->
            )
        </if>
    </select>

    <!-- 列表(全部) -->
    <select id="listAll" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
    </select>

    <select id="listByFILE_CATALOGURL_ID_NotENCTYPT" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        WHERE FILE_CATALOGURL_ID = #{FILE_CATALOGURL_ID}
        and FILE_READUSERS LIKE '%'+ #{FILE_READUSERS} +'%' AND FILE_ISENCTYPT = 0
        ORDER BY FILENAME
    </select>

    <select id="listByFILE_CATALOGURL_ID_ENCTYPT" parameterType="pd" resultType="pd">
        select
        <include refid="Field"></include>
        from
        <include refid="tableName"></include>
        WHERE FILE_CATALOGURL_ID = #{FILE_CATALOGURL_ID}
        and FILE_READUSERS LIKE '%'+ #{FILE_READUSERS} +'%' AND FILE_ISENCTYPT = 1
        ORDER BY FILENAME
    </select>

    <!-- 批量删除 -->
    <delete id="deleteAll" parameterType="String">
        delete from
        <include refid="tableName"></include>
        where
        FILEMEANS_ID in
        <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- fh313596790qq(青苔) -->
</mapper>