<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Proceeds_recordMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_PROCEEDS_RECORD
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TYPE,	
		CONTRACT_ID,
		ITEMID,	
		RECEIVABLE,	
		OVERDUE,	
		OVERDUENUM,	
		RECEIVABLE_N,	
		NOT_RECEIVABLE,	
		RECEIVABL_PAYTIME,	
		RECEIVABL_EMPL,	
		MODE,	
		PAYER,
		AMOUNT,
		PROCEEDS_RECORD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TYPE},	
		#{CONTRACT_ID},
		#{ITEMID},	
		#{RECEIVABLE},	
		#{OVERDUE},	
		#{OVERDUENUM},	
		#{RECEIVABLE_N},	
		#{NOT_RECEIVABLE},	
		#{RECEIVABL_PAYTIME},	
		#{RECEIVABL_EMPL},	
		#{MODE},	
		#{PAYER},
		#{AMOUNT},
		#{PROCEEDS_RECORD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PROCEEDS_RECORD_ID = #{PROCEEDS_RECORD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TYPE = #{TYPE},
		CONTRACT_ID = #{CONTRACT_ID},
			ITEMID = #{ITEMID},
			RECEIVABLE = #{RECEIVABLE},
			OVERDUE = #{OVERDUE},
			OVERDUENUM = #{OVERDUENUM},
			RECEIVABLE_N = #{RECEIVABLE_N},
			NOT_RECEIVABLE = #{NOT_RECEIVABLE},
			RECEIVABL_PAYTIME = #{RECEIVABL_PAYTIME},
			RECEIVABL_EMPL = #{RECEIVABL_EMPL},
			MODE = #{MODE},
			PAYER = #{PAYER},
		PROCEEDS_RECORD_ID = PROCEEDS_RECORD_ID
		where 
		PROCEEDS_RECORD_ID = #{PROCEEDS_RECORD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PROCEEDS_RECORD_ID = #{PROCEEDS_RECORD_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PROCEEDS_RECORD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>