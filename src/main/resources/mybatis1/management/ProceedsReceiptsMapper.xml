<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProceedsReceiptsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_PROCEEDSRECEIPTS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PROCEEDSDATE,	
		PROCEEDSNUM,	
		OVERDUENUM,	
		RECEIVABLE_REALITY,	
		NOT_RECEIVABLE,	
		PAYER,	
		PROCEEDSER,	
		ISPRINTLN,	
		PRINTLNDATE,	
		PROCEEDSRECEIPTS_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PROCEEDSDATE},	
		#{PROCEEDSNUM},	
		#{OVERDUENUM},	
		#{RECEIVABLE_REALITY},	
		#{NOT_RECEIVABLE},	
		#{PAYER},	
		#{PROCEEDSER},	
		#{ISPRINTLN},	
		#{PRINTLNDATE},	
		#{PROCEEDSRECEIPTS_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			PROCEEDSRECEIPTS_ID = #{PROCEEDSRECEIPTS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PROCEEDSDATE = #{PROCEEDSDATE},
			PROCEEDSNUM = #{PROCEEDSNUM},
			OVERDUENUM = #{OVERDUENUM},
			RECEIVABLE_REALITY = #{RECEIVABLE_REALITY},
			NOT_RECEIVABLE = #{NOT_RECEIVABLE},
			PAYER = #{PAYER},
			PROCEEDSER = #{PROCEEDSER},
			ISPRINTLN = #{ISPRINTLN},
			PRINTLNDATE = #{PRINTLNDATE},
		PROCEEDSRECEIPTS_ID = PROCEEDSRECEIPTS_ID
		where 
		PROCEEDSRECEIPTS_ID = #{PROCEEDSRECEIPTS_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PROCEEDSRECEIPTS_ID = #{PROCEEDSRECEIPTS_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			PROCEEDSRECEIPTS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>