<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ExpenseMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_EXPENSE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		LASTMONTH,	
		THISMONTH,	
		RATIO,	
		FVALUE,	
		NUMBER,	
		PRICE,	
		TOTAL,	
		REALITY_TOTAL,	
		INVOICE_ID,	
		CONTRACT_ID,	
		ISWATER,	
		ISLOSS,	
		METERNUM,
		ISCHANGE,
		N_EXPENSE_ID,
		EXPENSE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{LASTMONTH},	
		#{THISMONTH},	
		#{RATIO},	
		#{FVALUE},	
		#{NUMBER},	
		#{PRICE},	
		#{TOTAL},	
		#{REALITY_TOTAL},	
		#{INVOICE_ID},	
		#{CONTRACT_ID},	
		#{ISWATER},	
		#{ISLOSS},	
		#{METERNUM},
		#{ISCHANGE},
		#{N_EXPENSE_ID},
		#{EXPENSE_ID}
	</sql>

	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EXPENSE_ID = #{EXPENSE_ID}
	</delete>

	<delete id="deleteByEWAndINvID" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		INVOICE_ID = #{INVOICE_ID} AND ISWATER = #{ISWATER}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			LASTMONTH = #{LASTMONTH},
			THISMONTH = #{THISMONTH},
			RATIO = #{RATIO},
			FVALUE = #{FVALUE},
			NUMBER = #{NUMBER},
			PRICE = #{PRICE},
			TOTAL = #{TOTAL},
			ISCHANGE = #{ISCHANGE},
			REALITY_TOTAL = #{REALITY_TOTAL},
			ISLOSS = #{ISLOSS},
			METERNUM = #{METERNUM},
		EXPENSE_ID = EXPENSE_ID
		where 
		EXPENSE_ID = #{EXPENSE_ID}
	</update>

	<update id="editThisMonth" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		LASTMONTH = #{LASTMONTH},
		RATIO = #{RATIO},
		FVALUE = #{FVALUE},
		PRICE = #{PRICE},
		ISLOSS = #{ISLOSS},
		ISCHANGE = #{ISCHANGE},
		METERNUM = #{METERNUM},
		EXPENSE_ID = EXPENSE_ID
		where
		EXPENSE_ID = #{EXPENSE_ID}
	</update>

	<update id="editState" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		ISCHANGE = #{ISCHANGE},
		N_EXPENSE_ID = #{N_EXPENSE_ID}
		where
		EXPENSE_ID = #{EXPENSE_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			EXPENSE_ID = #{EXPENSE_ID}
	</select>

	<select id="listElByInvoiceId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		INVOICE_ID = #{INVOICE_ID} AND ISWATER = '电费'
		<if test="ISCHANGE != null and ISCHANGE != ''">
		AND ISCHANGE = #{ISCHANGE}
		</if>
		ORDER BY NUM
	</select>

	<select id="listWaByInvoiceId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		INVOICE_ID = #{INVOICE_ID} AND ISWATER = '水费'
		<if test="ISCHANGE != null and ISCHANGE != ''">
			AND ISCHANGE = #{ISCHANGE}
		</if>
		ORDER BY NUM
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EXPENSE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>